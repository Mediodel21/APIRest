<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APIRest.PageLevel3" Title="Proyecto Xamarin Cenfotec">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Comentarios de Usuarios"  
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand"  FontSize="Medium"/>

            <ListView x:Name="lstComments" Margin="50" HorizontalOptions="Center">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding email}" TextColor="Black"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>